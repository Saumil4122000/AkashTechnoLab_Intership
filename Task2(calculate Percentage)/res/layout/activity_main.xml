<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:text="Percentage Calculator"
  android:textSize="30dp"
  android:textStyle="bold"
  android:fontFamily="cursive"
  android:padding="30dp"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Subject 1"
      android:textSize="30dp"
      android:textStyle="bold"
      android:fontFamily="sans-serif-condensed"
      android:paddingLeft="10dp"
      android:paddingTop="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter first sub mark"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/edt1"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:background="@drawable/edit_text_border"
        android:fontFamily="sans-serif"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="enter subject 1 marks"
      android:paddingTop="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:paddingBottom="10dp"
      android:id="@+id/edt2"
      android:inputType="number"
      android:paddingLeft="10dp"
      android:background="@drawable/edit_text_border"
      android:fontFamily="sans-serif"/>


  <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="enter subject 1 marks"
      android:paddingTop="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:paddingBottom="10dp"
      android:paddingLeft="10dp"
      android:id="@+id/edt3"
      android:inputType="number"
      android:background="@drawable/edit_text_border"
      android:fontFamily="sans-serif"/>


  <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 4"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="enter subject 1 marks"
      android:paddingTop="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:paddingBottom="10dp"
      android:id="@+id/edt4"
      android:inputType="number"
      android:paddingLeft="10dp"
      android:background="@drawable/edit_text_border"
      android:fontFamily="sans-serif"/>

  <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 5"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="enter subject 1 marks"
      android:paddingTop="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:paddingBottom="10dp"
      android:inputType="number"
      android:id="@+id/edt5"
      android:paddingLeft="10dp"
      android:background="@drawable/edit_text_border"
      android:fontFamily="sans-serif"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:background="@drawable/oval"
      android:text="Submit"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:id="@+id/btn"
        android:layout_marginTop="20dp"
      android:textColor="#000"/>

  </RelativeLayout>
</LinearLayout>